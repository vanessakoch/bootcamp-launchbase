{% extends "layout.njk" %}

{% block head %}
  <title>{{ recipe.title }} - Foodfy</title>
{% endblock %}

{% block content %}
  <section>
    <div class="container-recipe">
      <div class="container-init">
        <img src="{{ recipe.image }}" alt="Image of {{ recipe.title }}">
        <h2>{{recipe.title}}</h2>
        <p id="by">por {{recipe.author}}</p>
      </div>
      <div class="recipe-subtitle">
        <h3>Ingredientes</h3>
        <a id="ingredients-btn">ESCONDER</a>
      </div>
      <div class="recipe-content" id="ingredient-content">
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>{{ ingredient }}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="recipe-subtitle">
        <h3>Modo de preparo</h3>
        <a id="preparation-btn">MOSTRAR</a>
      </div>
      <div class="recipe-content hide" id="preparation-content">
        <ul>
          {% for preparation in recipe.preparation %}
            <li>{{ preparation }}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="recipe-subtitle">
        <h3>Informações Adicionais</h3>
        <a id="information-btn">ESCONDER</a>
      </div>
      <div class="recipe-content" id="information-content">
        <p>{{ recipe.information }}</p>
      </div>
    </div>    
  </section>

  <script src="/scripts.js"></script>

{% endblock %}