{% extends "layout.njk" %}

{% block content %}

  <div class="card">
    <section class="photo" style="background: url({{ teacher.photo_url}}) no-repeat center center / cover"></section>
    
    <section class="information">

      <div class="item">
        <div>Full name</div> 
        <div>{{ teacher.name }}</div>
      </div>

      <div class="item">
        <div>Age</div>
        <div>{{ teacher.age }}</div>
      </div>

      <div class="item">
        <div>Education Level</div>
        <div>{{ teacher.education }}</div>          
      </div>

      <div class="item">
        <div>Class format</div>
        <div>{{ "Tradicional" if teacher.format == "tradicional" else "Online" }}</div>
      </div>

      <div class="item">
        <div>Subjects</div>
        <div>
          {% for subject in teacher.subjects %}
            <span>{{ subject }}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div>Since</div>
        <div>{{ teacher.created_at }}</div>
      </div>

      <a href="#" class="button">Edit</a>

    </section>

  </div>

{% endblock content %}