{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">
    <a href="/students/create">New</a>

    <table>
      <thead>
        <tr>
          <th>Full name</th>
          <th>E-mail</th>
          <th>School Year</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {% for student in students %}
          <tr>
            <td>
              <span style="background-image: url({{ student.photo_url }})"></span>
              {{ student.name }}
            </td>
            <td>
              <span>{{ student.email }}</span>
            </td>
            <td>
              <span>{{ student.schoolyear }}th grade</span>
            </td>
            <td><a href="/students/{{ student.id }}">view</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    
  </div>

{% endblock content %}