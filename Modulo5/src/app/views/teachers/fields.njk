<div class="item-container">

  <div class="item">
    <div>Photo</div>
    <div>
      <input 
        type="url" 
        name="avatar_url"
        placeholder="https://"
        value="{{ teacher.avatar_url }}"
        required
      >
    </div>
  </div>

  <div class="item">
    <div>Full name</div>
    <div>
      <input 
        type="text" 
        name="name"
        placeholder="Type your full name"
        value="{{ teacher.name }}"
      >
    </div>
  </div>

  <div class="item">
    <div>Birth date</div>
    <div>
      <input 
        type="date" 
        name="birth_date"
        value="{{ teacher.birth_date }}"
      >
    </div>
  </div>

  <div class="item">
    <div>Education level</div>
    <div>
      <select name="education_level">
        <option 
          value="medium" 
          {% if teacher.education_level == "medium" %}
            selected
          {% endif %}
          >Complete High School
        </option>
        <option 
          value="graduation" 
          {% if teacher.education_level == "graduation" %}
            selected
          {% endif %}
          >Complete Graduation
        </option>
        <option 
          value="master" 
          {% if teacher.education_level == "master" %}
            selected
          {% endif %}
          >Master's Degree
        </option>
        <option 
          value="doctorate" 
          {% if teacher.education_level == "doctorate" %}
            selected
          {% endif %}
          >Doctorate Degree
        </option>
      </select>
    </div>
  </div>

  <div class="item">
    <div>Class format</div>
    <div>
      <span>
        <input 
          type="radio" 
          name="class_type" 
          value="tradicional" 
          {% if teacher.class_type == 'tradicional' %}
            checked
          {% endif %}
        >Tradicional classes
      </span>
      <span>
        <input 
          type="radio" 
          name="class_type" 
          value="online"
          {% if teacher.class_type == 'online' %}
            checked
          {% endif %}
        >Online classes
      </span>
    </div>
  </div>

  <div class="item">
    <div>Subjects</div>
    <div>
      <input 
        type="text" 
        name="subjects_taught"
        value="{{ teacher.subjects_taught }}"
        placeholder="Type the subjects you teach between commas ,"
      >
    </div>
  </div>
</div>

<button type="submit">Save</button>